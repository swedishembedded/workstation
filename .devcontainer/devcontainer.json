{
    "name": "Swedish Embedded Workstation",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "remoteUser": "user",
    "runArgs": [
        "--privileged",
        "-e DISPLAY",
        "--network=host"
    ],
    "mounts": [
        "source=/dev,target=/dev,type=bind",
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "type=bind,source=/home/${env:USER}/.ssh,target=/root/.ssh",
        "type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix"
    ]
}
